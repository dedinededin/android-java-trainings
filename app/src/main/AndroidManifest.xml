<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.FileReadWriteActivity"></activity>
        <activity android:name=".activities.RandomNumberActivity" />
        <activity android:name=".activities.DatabaseActivity" />
        <activity android:name=".activities.FragmentActivity" />
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.SecondActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".services.RandomService" />
    </application>

</manifest>